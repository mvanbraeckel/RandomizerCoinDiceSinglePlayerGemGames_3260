<p id="notice"><%= notice %></p>

<h1>User</h1>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Points:</strong>
  <%= @user.points %>
</p>
<p>
  <strong>Gems:</strong>
  <%= @user.gems %>
</p>

<%= link_to 'Home', root_path %> |
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>

<h2><%= link_to 'Bag Contents', user_items_path(@user) %></h2>
<ul>
  <% @user.items.each do |item| %>
    <% if item.item == :coin || item.item == "coin" %>
      <li>{item: <%= item.item %>, denomination: <%= item.denomination.round(2) %>}</li>
    <% elsif item.item == :die || item.item == "die" %>
      <li>{item: <%= item.item %>, sides: <%= item.sides %>, colour: <%= item.colour %>}</li>
    <% else %>
      <li>{item: <%= item.item %> (unknown)}</li>
    <% end %>
  <% end %>
</ul>

